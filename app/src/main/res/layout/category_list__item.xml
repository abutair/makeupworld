<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/parent_layout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/categorey_image"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/categorey_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/categorey_image"
                android:text="make up "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/categorey_list_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/categorey_list_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/categorey_image"
                android:text="shourt descrbition about makeup"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

           <Button
               android:id="@+id/AddToCart"
               android:layout_marginTop="10dp"
               android:layout_width="wrap_content"
               android:layout_height="40dp"
               android:layout_below="@+id/categorey_list_desc"
               android:text="Add to Cart"
               android:textSize="13sp"
               android:textAllCaps="false"
               android:layout_alignParentRight="true"
               android:background="@color/colorPrimary"
               android:textColor="@color/white"
               />

            <TextView
                android:id="@+id/categorey_list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/categorey_list_desc"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/categorey_image"
                android:text="22$"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
               />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>